<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/small"
            android:layout_marginTop="15dp"
            android:text="Back"
            android:textSize="19sp" />


        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/bag" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/fancy"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/heading_style"
        android:text="Pastries" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="175dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/croissant" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="Croissant"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="₱150"
                android:textSize="20sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCroissant"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/small"
                android:text="Select"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="175dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/eclair" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="Éclair "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="₱200"
                android:textSize="20sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEclair"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/small"
                android:text="Select"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="175dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/macaron" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="Macaron"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="₱250"
                android:textSize="20sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMacaron"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/small"
                android:text="Select"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="175dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tarte_tatin" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="Tarte Tatin"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/small"
                android:text="₱300"
                android:textSize="20sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTarteTatin"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/small"
                android:text="Select"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>








